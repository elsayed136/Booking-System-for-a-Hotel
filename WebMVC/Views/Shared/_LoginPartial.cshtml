@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor httpAcc
@*httpAcc.HttpContext.Session.GetString("JWToken") != null &&
    httpAcc.HttpContext.Session.GetString("JWToken").ToString().Length > 0*@
<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Account" asp-controller="Auth" asp-action="Logout">
                <button id="logout" type="submit" class="nav-link btn btn-link">Logout</button>
            </form>
        </li>
    }
    else
    {
    <li class="nav-item">
        <a class="nav-link" id="register" asp-area="Account" asp-controller="Auth" asp-action="Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="login" asp-area="Account" asp-controller="Auth" asp-action="Login">Login</a>
    </li>
    }
</ul>
