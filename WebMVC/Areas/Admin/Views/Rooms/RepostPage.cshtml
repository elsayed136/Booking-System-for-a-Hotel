@model IEnumerable<Room>
<div class="container p-3">
    <div class="row align-items-center pt-4 mb-2">
        <div class="col-6">
            <h2 class="text-primary">Today Report</h2>
        </div>
    </div>
    <div class="row">
        <table id="tblData" class="table table-striped table-hover" style="width:100%">
            <thead>
                <tr>
                    <th>Branch Name</th>
                    <th>Branch Location</th>
                    <th>Room.No</th>
                    <th>RoomFloor</th>
                    <th>Type</th>
                    <th>Price (p/n)</th>
                    <th>Price Factor</th>
                    <th>Max Members</th>
                    <th>status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var room in @Model)
                {
                    <tr>
                        <td>@room.Branch.Name</td>
                        <td>@room.Branch.Location</td>
                        <td>@room.RoomNumber</td>
                        <td>@room.RoomFloor</td>
                        <td>@room.RoomType.Name</td>
                        <td>@room.RoomType.Price</td>
                        <td>@room.PriceFactor</td>
                        <td>@room.RoomType.MaxClientsAllowed</td>
                        <td>
                            @if (@room.IsAvailable)
                            {
                                <span class="badge bg-success">Available</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Booked</span>
                            }
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>

</div>
